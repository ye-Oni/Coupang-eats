<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sign_up_sign_up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/sign_up_back_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sign_up_back_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/ic_back"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/xmark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/signup_makeus_logo_iv"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/img_app_logo"
        android:src="@drawable/coupanglogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_sign_up_tv" />

    <LinearLayout
        android:id="@+id/signup_id_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_makeus_logo_iv"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/login_rounding">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/message"
            android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/signup_id_et"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="아이디(이메일)"
            android:backgroundTint="#ffffff"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signup_pwd_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_id_ly"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/login_rounding">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/lock"
            android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/signup_pwd_et"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="#ffffff"
            android:inputType="textPassword"
            android:hint="비밀번호" />

        <ImageView
            android:id="@+id/signup_inputPassword_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_input_password"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signup_name_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_pwd_ly"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/login_rounding">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/human"
            android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/signup_name_et"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:backgroundTint="#ffffff"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signup_phoneNo_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_name_ly"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/login_rounding">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/phone"
            android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/signup_phoneNo_et"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="휴대폰 번호"
            android:backgroundTint="#ffffff"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_sign_up_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#216EF3"
        android:text="가입하기"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_phoneNo_ly" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coupang Corp. All rights reserved."
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>



