<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/mypage_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이츠 시작하기"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/mypage_text2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지금 로그인하고\n무료배달과 기간 한정 쿠폰 혜택 놓치지 마세요."
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_text_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mypage_sign_in_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#45C4FF"
        android:text="쿠팡 앱으로 간편 로그인"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_text2_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mypage_sign_in_btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#ffffff"
        android:text="쿠팡 아이디(이메일)로 간편 로그인"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_sign_in_btn" />

    <TextView
        android:id="@+id/mypage_question_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 회원이 아니신가요?"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mypage_signup_tv"
        app:layout_constraintTop_toBottomOf="@id/mypage_sign_in_btn2"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/mypage_signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="15sp"
        android:textColor="#45C4FF"
        app:layout_constraintStart_toEndOf="@id/mypage_question_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_sign_in_btn2"
        android:layout_marginTop="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>