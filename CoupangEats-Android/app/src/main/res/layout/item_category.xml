<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp">

    <ImageView
        android:id="@+id/item_category_icon_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/takeout2"
        android:background="@drawable/category_item_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_category_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/item_category_icon_iv"
        app:layout_constraintEnd_toEndOf="@id/item_category_icon_iv"
        app:layout_constraintTop_toBottomOf="@id/item_category_icon_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>